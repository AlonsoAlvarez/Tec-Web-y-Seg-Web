<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo grupo</h3>
        </div>
        <div class="card-body">
            <form action="/grupos/new-grupo" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="edificio" class="form-control" placeholder="Edificio">
                </div>
                <div class="form-group">
                    <input type="text" name="aula" class="form-control" placeholder="Aula">
                </div>
                <div class="form-group">
                    <input type="text" name="horario" class="form-control" placeholder="Horario">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>