<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edita grupo</h3>
        </div>
        <div class="card-body">
            <form action="/grupos/edit/{{grupo.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{grupo.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="edificio" class="form-control" value="{{grupo.edificio}}">
                </div>
                <div class="form-group">
                    <input type="text" name="aula" class="form-control" value="{{grupo.aula}}">
                </div>
                <div class="form-group">
                    <input type="text" name="horario" class="form-control" value="{{grupo.horario}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>