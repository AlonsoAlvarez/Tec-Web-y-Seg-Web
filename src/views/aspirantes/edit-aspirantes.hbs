<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edita aspirante</h3>
        </div>
        <div class="card-body">
            <form action="/aspirantes/edit/{{aspirante.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{aspirante.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" value="{{aspirante.email}}">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" class="form-control" value="{{aspirante.phone}}">
                </div>
                <div class="form-group">
                    <input type="text" name="municipio" class="form-control" value="{{aspirante.municipio}}">
                </div>
                <div class="form-group">
                    <input type="text" name="procedencia" class="form-control" value="{{aspirante.procedencia}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>