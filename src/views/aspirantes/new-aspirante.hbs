<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo Aspirante</h3>
        </div>
        <div class="card-body">
            <form action="/aspirantes/new-aspirante" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <input type="text" name="phone" class="form-control" placeholder="Telefono">
                </div>
                <div class="form-group">
                    <input type="text" name="municipio" class="form-control" placeholder="Municipio">
                </div>
                <div class="form-group">
                    <input type="text" name="procedencia" class="form-control" placeholder="Escuela de procedencia">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>