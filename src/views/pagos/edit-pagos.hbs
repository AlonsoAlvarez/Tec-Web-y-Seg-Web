<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edita pago</h3>
        </div>
        <div class="card-body">
            <form action="/pagos/edit/{{pago.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="concepto" class="form-control" value="{{pago.concepto}}">
                </div>
                <div class="form-group">
                    <input type="text" name="precio" class="form-control" value="{{pago.precio}}">
                </div>
                <div class="form-group">
                    <input type="text" name="aspirante" class="form-control" value="{{pago.aspirante}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>