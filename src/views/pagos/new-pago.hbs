<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nuevo pago</h3>
        </div>
        <div class="card-body">
            <form action="/pagos/new-pago" method="post">
                <div class="form-group">
                    <input type="text" name="concepto" class="form-control" placeholder="Concepto" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="precio" class="form-control" placeholder="Precio">
                </div>
                <div class="form-group">
                    <input type="text" name="aspirante" class="form-control" placeholder="Aspirante">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>